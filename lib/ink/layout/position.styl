// helper

-pos(type, args)
  position unquote(type)
  i = 0
  {args[i]}      args[i + 1] is a 'unit' ? grid_unit(args[i += 1]) : 0

  if args[i + 1]
    {args[i += 1]} args[i + 1] is a 'unit' ? grid_unit(args[i += 1]) : 0



/*
 * Position utilities.
 * 
 * Synopsis:
 * 
 *   <type>: <pos> [n] <pos> [n]
 * 
 * Examples:
 * 
 *     fixed:    top left
 *     absolute: top 5px left
 *     relative: top left 5px
 *     fixed:    top 5px left 5px
 * 
 */

fixed()
  -pos('fixed', arguments)

absolute()
  -pos('absolute', arguments)

relative()
  -pos('relative', arguments)


hang(hside=left,vside=top, z_index=false)
    absolute hside vside

    & > .inner
        absolute opposite-position(hside)

    if z isnt false
        z-index z_index


absolute-center(orient=vertical,offset=false,terminus=start,pos=absolute)
    position pos unless pos is false
    margin-{getStart(orient)} offset unless offset is false

    {convertTerminusToSide(orient, terminus)} 50%

